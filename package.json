{
  "name": "uses",
  "version": "1.0.0",
  "description": "ðŸŽ£ Collection of custom React hooks",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "esm/"
  ],
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "scripts": {
    "start": "yarn storybook",
    "test": "jest --maxWorkers 2",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "yarn lint --fix",
    "lint:types": "tsc --noEmit",
    "lint:prettier": "prettier --write src/**/**/*.{ts,tsx}",
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "yarn build:cjs && yarn build:es",
    "clean": "rimraf lib storybook-static esm",
    "storybook": "start-storybook -p 6000 --no-dll",
    "storybook:build": "build-storybook --no-dll",
    "storybook:upload": "gh-pages -d storybook-static --git \"$(which git)\"",
    "storybook:clean": "rimraf storybook-static",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:types && lint-staged",
      "pre-push": "yarn lint && yarn clean && yarn build && yarn test"
    }
  },
  "author": "Hewon Jeong",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/hewonjeong/uses"
  },
  "homepage": "https://github.com/hewonjoneg/uses#readme",
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-react": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/npm": "7.0.6",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-knobs": "6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/addon-notes": "5.3.21",
    "@storybook/addon-options": "5.3.21",
    "@storybook/react": "^6.0.28",
    "@testing-library/react-hooks": "3.4.2",
    "@types/jest": "26.0.15",
    "@types/react": "16.9.55",
    "@types/react-wait": "0.3.1",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-core": "6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "8.1.0",
    "babel-plugin-dynamic-import-node": "2.3.3",
    "eslint": "^7.12.1",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "5.2.1",
    "gh-pages": "3.1.0",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-is": "^17.0.1",
    "react-test-renderer": "17.0.1",
    "rimraf": "3.0.2",
    "semantic-release": "17.2.2",
    "ts-loader": "8.0.7",
    "ts-node": "9.0.0",
    "typescript": "4.0.5"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "prerelease": "rc"
      }
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "lint-staged": {
    "src/**/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "volta": {
    "node": "10.16.3",
    "yarn": "1.19.0"
  }
}
